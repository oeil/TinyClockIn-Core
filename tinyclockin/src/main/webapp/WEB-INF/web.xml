<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="dropbitz" version="3.0">
   
	<filter>
		<filter-name>default</filter-name>
		<filter-class>org.teknux.tinyclockin.AppServlet</filter-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>org.teknux.tinyclockin.controller</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.provider.classnames</param-name>
			<param-value>org.teknux.tinyclockin.controller.security.CorsResponseFilter</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>default</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
